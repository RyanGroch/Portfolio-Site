---
// This URL is generated by formsubmit.co, and is specific to me.
const FORM_SUBMIT_URL =
  "https://formsubmit.co/e135b400592435124a9c16ca224382e9";
---

<section class="min-h-[50svh] pb-16 pt-8" id="contact-me">
  <h2
    class="px-4 pb-2 text-center font-neon text-5xl text-secondary shadow-secondary xs:text-6xl sm:text-7xl lg:text-8xl"
  >
    C<span class="blinker-1">o</span>ntact Me
  </h2>
  <div class="flex justify-center px-4">
    <form
      class="flex w-full flex-col gap-8 rounded-lg border-8 border-primary bg-gradient-to-r from-black to-tertiary p-4 text-white sm:w-[37rem] md:w-[45rem] lg:w-[60rem]"
      action={FORM_SUBMIT_URL}
      method="POST"
    >
      <input type="hidden" name="_captcha" value="false" />
      <input
        class="border-b-2 border-primary bg-transparent outline-none"
        name="name"
        placeholder="Name*"
        required
      />
      <input
        class="border-b-2 border-primary bg-transparent outline-none"
        name="email"
        placeholder="Email*"
        required
      />
      <input
        class="border-b-2 border-primary bg-transparent outline-none"
        name="subject"
        placeholder="Subject"
      />
      <textarea
        class="border-b-2 border-primary bg-transparent outline-none"
        placeholder="Your Message...*"
        name="message"
        rows="10"
        required></textarea>
      <button
        class="w-fit self-center rounded-full border-4 border-secondary p-4 text-lg text-primary"
        type="submit">Submit Form</button
      >
    </form>
  </div>
</section>
